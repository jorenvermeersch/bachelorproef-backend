      "config",
      "src"
    ],
    "ext": "js,json",
    "legacyWatch": true
  },
  "devDependencies": {
    "eslint": "^7.27.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "nodemon": "^2.0.7"
  },
  "dependencies": {
    "config": "^3.3.6",
    "dotenv": "^10.0.0",
    "koa": "^2.13.1",
    "winston": "^3.3.3"
  }
}

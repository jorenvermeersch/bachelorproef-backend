{
  "name": "budget-backend",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "git@github.com:HOGENT-Web/BudgetBackEnd.git",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "node src/index.js",
    "start:dev": "nodemon",
    "lint": "npx eslint . --fix",
    "test": "node --env-file=.env.test ./node_modules/.bin/jest",
    "test:coverage": "yarn test --coverage"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "argon2": "^0.31.1",
    "config": "^3.3.6",
    "joi": "^17.10.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^2.1.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^7.0.2",
    "koa-qs": "^3.0.0",
    "koa2-swagger-ui": "^5.9.0",
    "mysql2": "^3.6.1",
    "node-emoji": "^2.1.0",
    "swagger-jsdoc": "^6",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "eslint": "^8.49.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.1.3"
  },
  "nodemonConfig": {
    "signal": "SIGTERM",
    "ignore": [
      "node_modules/*",
      ".vscode/*"
    ],
    "delay": "80",
    "watch": [
      "config",
      "src"
    ],
    "ext": "js,json",
    "legacyWatch": true,
    "exec": "node --inspect=0.0.0.0:9001 --trace-warnings --env-file=.env.dev src/index.js"
  },
  "engines": {
    "npm": ">=9.8.0",
    "node": ">=20.6.0",
    "yarn": ">=1.22.0"
  }
}
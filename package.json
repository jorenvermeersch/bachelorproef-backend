{
  "name": "budget-backend",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "git@github.com:HOGENT-Web/BudgetBackEnd.git",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production node src/index.js",
    "start:dev": "NODE_ENV=development nodemon src/index.js",
    "lint": "npx eslint ./src --fix"
